<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">


    <LinearLayout
        android:id="@+id/principalLinear"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="50dp">

        <!--Barra color -->
        <LinearLayout
            android:id="@+id/lyIndicadorStatusIPHEstatusAdministrativo"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/status_por_completar_background">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".1"
            android:orientation="vertical">

            <!--Folio interno -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:paddingLeft="18dp">

                <TextView
                    android:id="@+id/lblPrincipalFolioInternoAdministrativo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Folio Interno:"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--Numero de Regrencia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:paddingLeft="18dp">

                <TextView
                    android:id="@+id/lblPrincipalNoRegrenciaAdministrativo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Referencia:"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".9"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgVisualizarIPH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_eye" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>