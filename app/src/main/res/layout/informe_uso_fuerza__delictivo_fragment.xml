<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delictivo.ui.fragmets.InformeUsoFuerza_Delictivo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">



            <LinearLayout
                android:id="@+id/lySeccionB1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@color/background_section">
                <TextView
                    android:id="@+id/lblSeccionB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apartado B.1 Niveles del uso de fuerza" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secundarioLinear"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/lyAutoridadesLesionadosUsoFuerza"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_weight="0.10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblAutoridadesLesionadosUsoFuerza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autoridades lesionadas" />

                    <Spinner
                        android:id="@+id/spAutoridadesLesionadosUsoFuerza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/arrayTotalesAnexos"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyAutoridadesFallecidasUsoFuerza"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.10">
                    <TextView
                        android:id="@+id/lblAutoridadesFallecidasUsoFuerza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autoridades Fallecidas" />
                    <Spinner
                        android:id="@+id/spAutoridadesFallecidasUsoFuerza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/arrayTotalesAnexos"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyPersonasLesionadasUsoFuerza"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_weight="0.10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblPersonasLesionadasUsoFuerza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personas lesionadas" />

                    <Spinner
                        android:id="@+id/spPersonasLesionadasUsoFuerza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/arrayTotalesAnexos"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyPersonasFallecidasUsoFuerza"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.10">
                    <TextView
                        android:id="@+id/lblPersonasFallecidasUsoFuerza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personas fallecidas" />
                    <Spinner
                        android:id="@+id/spPersonasFallecidasUsoFuerza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/arrayTotalesAnexos"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quinceavoLinearFuerza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/ic_borde_radio"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/border"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/lblpregunta1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center_vertical"
                        android:text="Reducción física de movimientos"
                        android:textColor="@color/font" />

                    <TextView
                        android:id="@+id/lblpregunta2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:text="Utilización de armas incapacitantes menos letales"
                        android:textColor="@color/font" />

                    <TextView
                        android:id="@+id/lblpregunta3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:text="Utilización de armas de fuego o fuerza letal"
                        android:textColor="@color/font"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <RadioGroup
                        android:id="@+id/rgReduccionFisicaDelictivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbNoReduccionFisicaDelictivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:text="@string/no"
                            android:button="@null"
                            android:drawableStart="@drawable/rbbox"/>

                        <RadioButton
                            android:id="@+id/rbSiReduccionFisicaDelictivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="@string/si"
                            android:button="@null"
                            android:drawableStart="@drawable/rbbox"/>
                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgArmasIncapacitantesDelictivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <RadioButton
                            android:id="@+id/rbNoArmasIncapacitantesDelictivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:text="@string/no"
                            android:button="@null"
                            android:drawableStart="@drawable/rbbox"/>

                        <RadioButton
                            android:id="@+id/rbSiArmasIncapacitantesDelictivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="@string/si"
                            android:button="@null"
                            android:drawableStart="@drawable/rbbox" />
                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgArmasFuegoDelictivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <RadioButton
                            android:id="@+id/rbNoArmasFuegoDelictivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:text="@string/no"
                            android:button="@null"
                            android:drawableStart="@drawable/rbbox" />

                        <RadioButton
                            android:id="@+id/rbSiArmasFuegoDelictivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="@string/si"
                            android:button="@null"
                            android:drawableStart="@drawable/rbbox" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.10"
                    android:orientation="vertical"
                    android:weightSum="1">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/catorceavoLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtDescripciondelUsoFuerza"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:digits="@string/validacion_notas"
                        android:gravity="top"
                        android:inputType="textMultiLine|textCapCharacters"
                        android:maxLength="8000" />

                    <ImageView
                        android:id="@+id/img_microfonoDescripcionUsoFuerza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/txtDescripciondelUsoFuerza"
                        android:src="@drawable/ic_micro"/>

                    <TextView
                        android:id="@+id/lblmax3000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtDescripciondelUsoFuerza"
                        android:text="Describa las conductas (resistencia activa y de alta peligrosidad) que motivaron el uso de la fuerza:"
                        android:textStyle="italic"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/principalLinear1"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/lyAsistenciaMedica"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblAsistenciaMedicaUsoFuerza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Brindó o solicitó asistencia médica?" />
                    <RadioGroup
                        android:id="@+id/rgAsistenciaMedicaUsoFuerza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rbSiAsistenciaMedicaUsoFuerza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="Si"
                            android:button="@null"
                            android:drawableStart="@drawable/rbbox" />

                        <RadioButton
                            android:id="@+id/rbNoAsistenciaMedicaUsoFuerza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:text="@string/no"
                            android:button="@null"
                            android:drawableStart="@drawable/rbbox"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/catorceavoLinear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtDescripcionAsistenciaMedicaUsoFuerza"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:inputType="textMultiLine|textCapCharacters"
                        android:digits="@string/validacion_notas"
                        android:maxLength="8000"
                        android:gravity="top"/>

                    <ImageView
                        android:id="@+id/img_microfonoDescripcionAsistenciaMedicaUsoFuerza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/txtDescripcionAsistenciaMedicaUsoFuerza"
                        android:src="@drawable/ic_micro"/>

                    <TextView
                        android:id="@+id/lblDescripcionAsistenciaMedicaUsoFuerza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtDescripcionAsistenciaMedicaUsoFuerza"
                        android:text="Explique su respuesta"
                        android:textStyle="italic"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quintoLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.10">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyGuardarUsoFuerza"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_weight="0.5">
                    <Button
                        android:id="@+id/btnGuardarUsoFuerza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:drawableLeft="@drawable/ic_save_white"
                        android:background="@color/backgroud_header_toolbar"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@string/guardar_datos" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.10">
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>