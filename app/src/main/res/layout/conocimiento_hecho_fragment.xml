<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delictivo.ui.fragmets.ConocimientoHecho">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/lyDatosIdentificacionHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lyHeaderIdentificacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_section"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDatosIdentificacionHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apartado 3.1 Conocimiento del hecho por el primer respondiente"
                        android:textColor="@color/font" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/quintoLinearDos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/lyDatosIdentificacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:gravity="center|start"
                    android:layout_weight="0.10">
                    <TextView
                        android:id="@+id/lblHechoProbableInfraccionAdministrativo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/como_se_entero_del_hecho" />
                    <Spinner
                        android:id="@+id/spConocimientoHechoDelictivo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/quintoLinearTres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/lyNum911"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:gravity="center|start"
                    android:layout_weight="0.20">
                    <TextView
                        android:id="@+id/lbl911FolioProbableInfraccionAdministrativo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_911_no_solo_en_caso_de_contar_con_el" />

                    <EditText
                        android:id="@+id/txt911FolioConocimientoHechoDelictivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/validacion_numero"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyDatosApartadoSeguimiento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lyHeaderDatosApartadoSeguimiento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_section"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDatosApartadoSeguimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apartado 3.2 Seguimiento de la actuación de la autoridad"
                        android:textColor="@color/font" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyFechaHoraConocimientoHechoHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/lyFechaHoraConocimientoHecho"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:gravity="center|start"
                    android:layout_weight="0.10">
                    <TextView
                        android:id="@+id/lblFechaHoraConocimientoHecho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha y Hora cuándo tuvo conocimiento del hecho" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cuartoLinear"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">
                <LinearLayout
                    android:id="@+id/lyFechaConocimientoHecho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblFechaConocimientoHecho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fecha" />

                    <EditText
                        android:id="@+id/txtFechaConocimientoHechoDelictivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_calendar"
                        android:hint="DD/MM/AAAA" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyHoraConocimientoHecho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/lblHoraConocimientoHecho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hora" />
                    <EditText
                        android:id="@+id/txtHoraConocimientoHechoDelictivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_time"
                        android:hint="HH:MM"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyFechaHoraArriboLugarHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/lyFechaHoraArriboLugar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:gravity="center|start"
                    android:layout_weight="0.10">
                    <TextView
                        android:id="@+id/lblFechaHoraArriboLugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha y Hora cuándo arribó al lugar de los hechos" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cuartoLinearDos"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">
                <LinearLayout
                    android:id="@+id/lyFechaArriboLugar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblFechaArriboLugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fecha" />

                    <EditText
                        android:id="@+id/txtFechaArriboLugarHD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_calendar"
                        android:hint="DD/MM/AAAA" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyHoraArriboLugar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/lblHoraArriboLugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hora" />
                    <EditText
                        android:id="@+id/txtHoraArriboLugarHD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_time"
                        android:hint="HH:MM"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quintoLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.10">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyGuardarReferenciaDelictivo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_weight="0.5">
                    <Button
                        android:id="@+id/btnGuardarConocimientoHechoDelictivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:drawableLeft="@drawable/ic_save_white"
                        android:background="@color/backgroud_header_toolbar"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@string/guardar_datos" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.10">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>