<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal.ui.fragments.PrincipalBuscar"
    android:background="#FAFAFA">

    <ScrollView
        android:id="@+id/scrollTransporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/PrincipalLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- =============== LINEAR TÍTULO  =====================-->
            <LinearLayout
                android:id="@+id/Linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/title_margin_top"
                    android:text="BUSCAR IPH"
                    android:textSize="20dp" />
            </LinearLayout>

            <!-- =============== LINEAR FILTROS  =====================-->
                <LinearLayout
                    android:id="@+id/LineaFiltrosdeBusqueda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- =============== LINEAR IZQUIERO  =====================-->
                    <LinearLayout
                        android:id="@+id/linearIzquierdo"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/rgFiltrosBuscar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/rbBuscarFolioInterno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=""
                                    android:checked="true"
                                    android:layout_marginBottom="50dp"
                                    android:button="@null"
                                    android:drawableStart="@drawable/rbbox"/>

                                <RadioButton
                                    android:id="@+id/rbBuscarFecha"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=""
                                    android:button="@null"
                                    android:drawableStart="@drawable/rbbox"/>
                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- =============== LINEAR DERECHO  =====================-->
                    <LinearLayout
                        android:id="@+id/linearDerecho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- =============== BUSCAR FOLIO INTERNO  =====================-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="1"
                            android:layout_weight="0.10">
                            <TextView
                                android:id="@+id/lblBuscarFolioInterno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font"
                                android:text="Folio Interno"/>
                            <EditText
                                android:id="@+id/txtBuscarFolioInterno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="50"
                                android:inputType="number"
                                android:digits="@string/validacion_numero"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:lines="1"
                                android:imeOptions="actionDone"/>
                        </LinearLayout>

                        <!-- =============== BUSCAR POR FECHAS  =====================-->

                        <LinearLayout
                            android:id="@+id/segundoLinear"
                            android:layout_width="match_parent"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:layout_marginTop="20dp">
                            <LinearLayout
                                android:id="@+id/lyFechaInicio"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/lblFechaInicio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Selecciona la Fecha Inicial" />

                                <EditText
                                    android:id="@+id/txtFechaInicio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:drawableRight="@drawable/ic_calendar"
                                    android:enabled="false"
                                    android:hint="AAAA/MM/DD">

                                </EditText>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lyFechaFinal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="1"
                                android:layout_weight="0.5">
                                <TextView
                                    android:id="@+id/lblFechaFinal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Selecciona la Fecha Final" />
                                <EditText
                                    android:id="@+id/txtFechaFinal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:enabled="false"
                                    android:drawableRight="@drawable/ic_calendar"
                                    android:hint="AAAA/MM/DD"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            <!-- =============== BOTÓN  =====================-->
            <LinearLayout
                android:id="@+id/lyBuscarIPH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/border"
                android:layout_marginRight="200dp"
                android:layout_marginLeft="200dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btnBuscarIPH"
                    android:layout_width="230dp"
                    android:layout_height="45dp"
                    android:background="@drawable/icn_search"/>
            </LinearLayout>
            <!-- =============== LINEAR lISTA DE iphs  =====================-->
            <LinearLayout
                android:id="@+id/sexteavoLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp">
                <ListView
                    android:id="@+id/lvIPHBuscados"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>